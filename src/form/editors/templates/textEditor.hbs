{{#if maxLength}}
    <input type="text" class="input input_text js-input" placeholder="{{placeholder}}" maxlength="{{maxLength}}">
{{else}}
    <input type="text" class="input input_text js-input" placeholder="{{placeholder}}">
{{/if}}
<div class="svg-icons-wrp">
    <div class="svg-icons-wrp__empty">
        <svg class="svg-icons svg-icons_text"><use xlink:href="#svg-icons_text" /> </svg>
    </div>
    <div class="js-clear-button svg-icons-wrp__remove">
        <svg class="svg-icons svg-icons_remove"><use xlink:href="#svg-icons_remove" /> </svg>
    </div>
</div>
