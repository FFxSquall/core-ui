<div class="js-loading-region l-loader"></div>

<div class="dd-list__filter dd-list__filter_reference">
    {{#if text}}
    <div class="dd-list__title btn-wrp-active">
        {{text}}
        <div class="svg-icons-wrp">
            <div class="js-clear svg-icons-wrp__remove svg-icons-wrp__remove_dd-title">
                <svg class="svg-icons svg-icons_remove"><use xlink:href="#svg-icons_remove" /> </svg>
            </div>
        </div>
    </div>
    {{/if}}
    <div class="list-search list-search_dd">
        <input type="text" class="list-search__input js-input" placeholder="{{localize 'CORE.FORM.EDITORS.REFERENCE.SEARCH'}}">
    </div>
</div>
<div class="dd-list__list dd-list__list_reference">
    <div class="js-list-region dd-list__wrp {{#if showAddNewButton}}dd-list__wrp_button{{/if}}"></div>
    <div class="js-scrollbar-region dd-list__scrollbar {{#if showAddNewButton}}dd-list__scrollbar_button{{/if}}"></div>
</div>
{{#if showAddNewButton}}
<div class="dd-list__btn js-add-new-button-region"></div>
{{/if}}