<span class="js-anchor">
    {{#with member}}
      {{#if avatarUrl}}
       <span style="background-image: url({{avatarUrl}});" class="js-avatar avatar-icon avatar-icon_field"></span>
      {{else}}
      <span class="avatar-icon avatar-icon_field">
        {{abbreviation}}
      </span>
      {{/if}}
    {{else}}
    <span class="avatar-icon avatar-icon_field avatar-icon_assignee avatar-icon_field">
    </span>
    {{/with}}
</span>
<span class="js-text field-user__content">
    {{#with member}}
    {{name}}
    {{else}}
      <span class="dev-member-not-set">{{localize 'CORE.FORM.EDITORS.MEMBERSELECT.NOTSET'}}</span>
    {{/with}}
    <span class="js-clear-button button-delete button-delete_absolute"></span>
</span>