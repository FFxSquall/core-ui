{{#each columns}}
    <div class="grid-header-column {{columnClass}}" title="{{title}}">
    {{#unless alignRight}}{{title}}{{/unless}}
    {{#if sortingAsc}}<span class="sort_down"></span>{{/if}}
    {{#if sortingDesc}}<span class="sort_up"></span>{{/if}}
    {{#if alignRight}}{{title}}{{/if}}
        <div class="grid-header-dragger"></div>
    </div>
{{/each}}